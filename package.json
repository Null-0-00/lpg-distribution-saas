{
  "name": "lpg-distributor-saas",
  "version": "1.0.0",
  "description": "Comprehensive SaaS platform for LPG distributors",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:webpack": "cross-env ANALYZE=true webpack --config webpack.config.js",
    "bundle-analyzer": "npm run build && npx @next/bundle-analyzer",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "prepare": "husky install",
    "lighthouse": "lhci autorun",
    "perf:test": "next build && npm run start & sleep 10 && lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "docker:build": "docker build -t lpg-distributor-saas .",
    "docker:run": "docker run -p 3000:3000 lpg-distributor-saas",
    "clean": "rm -rf .next node_modules/.cache",
    "precommit": "lint-staged",
    "validate": "node scripts/validation-test.js",
    "bug-check": "node scripts/bug-check.js"
  },
