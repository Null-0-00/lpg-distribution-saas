    "@types/react-dom": "^18",
    "@types/validator": "^13.11.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-dynamic-import": "^2.1.0",
    "compression-webpack-plugin": "^10.0.0",
