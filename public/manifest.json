    }
  ],
  
  "screenshots": [
    {
      "src": "/images/screenshots/dashboard-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Dashboard view on mobile"
    },
    {
      "src": "/images/screenshots/sales-mobile.png",
      "sizes": "390x844",
      "type": "image/png", 
      "platform": "narrow",
      "label": "Sales entry on mobile"
    },
    {
      "src": "/images/screenshots/dashboard-tablet.png",
      "sizes": "820x1180",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard view on tablet"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Quick Sale",
      "short_name": "Sale",
      "description": "Create a new sale entry",
      "url": "/sales/new",
      "icons": [
        {
          "src": "/images/icons/shortcut-sale.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Check Inventory",
      "short_name": "Inventory",
      "description": "View current inventory levels",
      "url": "/inventory",
      "icons": [
        {
          "src": "/images/icons/shortcut-inventory.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View business dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/images/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Driver Routes",
      "short_name": "Routes",
      "description": "Manage driver routes",
      "url": "/drivers",
      "icons": [
        {
          "src": "/images/icons/shortcut-routes.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+lpgsale",
      "url": "/sales/new?data=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "invoice",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },
  
  "iarc_rating_id": "",
  
  "permissions": [
    "geolocation",
    "notifications",
    "persistent-storage"
  ],
  
  "features": [
    "cross-origin-isolated"
  ]
}